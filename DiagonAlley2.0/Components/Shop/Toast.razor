


@if (Visible)
{
    <div class="toast">
        @Message
    </div>
}

@code {
    [Parameter] public string Message { get; set; } = "";
    public bool Visible { get; set; }

    public async Task Show(string message)
    {
        Message = message;
        Visible = true;
        StateHasChanged();

        await Task.Delay(2500);
        Visible = false;
        StateHasChanged();
    }
}
