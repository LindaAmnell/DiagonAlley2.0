@page "/signIn"

<div class="signIn">
	<h1>Diagon Alley</h1>

	<div class="particle" style="top:10%; left:20%; animation-delay:0s;"></div>
    <div class="particle" style="top:25%; left:70%; animation-delay:1s;"></div>
    <div class="particle" style="top:55%; left:30%; animation-delay:1.5s;"></div>
    <div class="particle" style="top:75%; left:60%; animation-delay:0.5s;"></div>
    <div class="particle" style="top:80%; left:40%; animation-delay:2s;"></div>
    <div class="particle" style="top:45%; left:80%; animation-delay:2.5s;"></div>
    <div class="particle" style="top:15%; left:50%; animation-delay:1.2s;"></div>


	<div class="input-section">
		<div class="inputValue">
		
        <label class="labels">Username</label>
        <input type="text"
               class="input"
               value="@UserName"
               @oninput="e => UserName = e.Value?.ToString()" />
		</div>
		<div class="inputValue" >
		 <label class="labels">Password</label>
        <input type="password"
               class="input"
               value="@Password"
               @oninput="e => Password = e.Value?.ToString()" />
		</div>
	</div>

	<button class=login-btn @onclick="HandeleLogin" >Sign In</button>

</div>

@code {

	private string UserName { get; set; } = "";
    private string Password { get; set; } = "";

	private void HandeleLogin()
	{
		
	}

}
